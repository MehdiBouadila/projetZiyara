
{% extends 'back.html.twig' %}
{% block css %}
{{ parent() }}
{% endblock %}

{% block title %}Produit index{% endblock %}
{% block navbar %}
{{ parent() }}
{% endblock %}
  
{% block body %}
{{ parent () }}
    <h1>Produit index</h1>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Delete</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td class="py-1">{{ produit.id }}</td>
                <td class="py-1">{{ produit.nom }}</td>
                <td><img src="{{ asset('uploads/' ~ produit.image) }}" alt="Uploaded Image" length="100" width="100"></td>
                <td class="py-1">{{ produit.quantite }}</td>
                <td class="py-1">{{ produit.prix }}</td>
                <td class="py-1"></td>
                <td class="py-1">{{ include('produit/_delete_form.html.twig') }}</td>
                <td class="py-1">
           
                     
                    <a type="button" class="btn btn-inverse-warning btn-fw" href="{{ path('app_produit_show', {'id': produit.id}) }}">show
                    <i class="mdi mdi-eye"></i> 
                    </a>
                    
                    <a type="button" class="btn btn-inverse-info btn-fw" href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit
                    <i class="mdi mdi-border-color"></i> 
                    </a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a type="button" class="btn btn-inverse-success btn-fw" href="{{ path('app_produit_new') }}">Create new
    <i class="mdi mdi-plus-circle"></i> 
    </a>
{% endblock %}
