{% extends 'base.html.twig' %}

{% block css %}
    {{ parent() }}
    <style>
        .about-intro {
            padding-top: 100px; /* Adjust as needed */
            padding-bottom: 100px; /* Adjust as needed */
        }
        .about-intro .img {
            background-size: cover;
            background-position: center;
            min-height: 500px; /* Adjust as needed */
            position: relative;
        }
       
        .about-intro .heading-section {
            color: #fff; /* Adjust text color as needed */
        }
        .about-intro h2 {
            font-size: 36px; /* Adjust font size as needed */
        }
        .about-intro p {
            font-size: 18px; /* Adjust font size as needed */
        }
        .about-intro .btn-primary {
            background-color: #007bff; /* Adjust button color as needed */
            border-color: #007bff; /* Adjust button border color as needed */
        }
        .about-intro .btn-primary:hover {
            background-color: #0056b3; /* Adjust button hover color as needed */
            border-color: #0056b3; /* Adjust button hover border color as needed */
        }
    </style>
{% endblock %}

{% block title %}Produit show{% endblock %}
{% block navbar %}
    {{ parent() }}
{% endblock %}
  
{% block body %}
<div class="hero-wrap js-fullheight" style="background-image: url('{{ asset('uploads/boutique.jpg') }}')">
		<div class="overlay"></div>
		<div class="container">
			<div class="row no-gutters slider-text js-fullheight align-items-center" data-scrollax-parent="true">
				<div class="col-md-7 ftco-animate">
					<h1 class="mb-4">Achetez vos souvenirs de notre espace Boutique!</h1>
				</div>
			</div>
		</div>
	</div>
    <section class="ftco-section ftco-about ftco-no-pt img">
        <div class="container">
            <div class="row d-flex">
                <div class="col-md-12 about-intro">
                    <div class="row">
                        <div class="col-md-6 d-flex align-items-stretch">
                            <div class="img d-flex w-100 align-items-center justify-content-center" style="background-image:url('{{ asset('uploads/'~ produit.image) }}');">
                            </div>
                        </div>
                        <div class="col-md-6 pl-md-4 py-5">
                            <div class="row justify-content-start pb-3">
                                <div class="col-md-12 heading-section ftco-animate fadeInUp ftco-animated">
                                    <span class="subheading">Your product details</span>
                                    <h2 class="mb-4">{{ produit.nom }}</h2>
                                    <h4 class="mb-4">Categorie:   {{produit.catt.type}}</h4>
                                    <h5 class="mb-4">{{ produit.catt.description }}</h5>
                                    <h1 class="position">{{ produit.prix }} TND</h1>
                                    <p><a href="{{ path('app_panier_add', {'id': produit.id}) }}" class="btn btn-primary">
                                    <span><svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M7.2998 5H22L20 12H8.37675M21 16H9L7 3H4M4 8H2M5 11H2M6 14H2M10 
                                        20C10 20.5523 9.55228 21 9 21C8.44772 21 8 20.5523 8 20C8 19.4477 8.44772 19 9 19C9.55228 19 10 19.4477 10 20ZM21 20C21 20.5523 20.5523 21 20 21C19.4477 21 19 20.5523 19 20C19 19.4477 19.4477 19 20 19C20.5523 19 21 19.4477 21 20Z" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                            </svg>
                                    </span>
                                    Ajouter au Panier</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
{% endblock %}
