{% extends 'back.html.twig' %}

{% block css %}
    {{ parent() }} 
{% endblock %}

{% block title %}Transport{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>Transport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transport.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if transport.imageTransport %}
                        <img src="{{ asset('uploads/' ~ transport.imageTransport) }}" alt="Transport Image">
                    {% else %}
                        No image available
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>TypeTransport</th>
                <td>{{ transport.typeTransport }}</td>
            </tr>
            <tr>
                <th>DateTransport</th>
                <td>{{ transport.dateTransport ? transport.dateTransport|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PrixTransport</th>
                <td>{{ transport.prixTransport }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ transport.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transport_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="btn btn-info">Edit</a>
    {{ include('/back/transport/_delete_form.html.twig') }}
{% endblock %}
