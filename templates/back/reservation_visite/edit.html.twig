{% extends 'back.html.twig' %}

{% block js %}
 {{ parent() }} 
 <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Select the input field for nbrparticipantvisite
            const nbrparticipantInput = document.getElementById('reservation_visite_nbrparticipantVisite');

            // Add event listener for input change
            nbrparticipantInput.addEventListener('input', function(event) {
                // Convert the input value to a number
                const value = parseInt(event.target.value);

                // Check if the value is negative
                if (value < 0) {
                    // If negative, set the value to 0
                    event.target.value = 0;
                }
            });
        });
    </script>
{% endblock %}

