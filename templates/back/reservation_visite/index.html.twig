{% extends 'back.html.twig' %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .container { margin-bottom: 64px; }
        .table {
            border-radius: 10px;
            overflow: hidden;
        }
        /* Keyframe animation for table rows */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        /* Apply animation to table rows */
        tbody tr {
            animation: fadeIn 0.5s ease-in-out;
        }
        /* Keyframe animation for button */
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
        /* Apply animation to button */
        .create-btn {
            animation: slideIn 0.5s ease-in-out;
        }
    </style>
{% endblock %}

{% block title %}
    ReservationVisite index
{% endblock %}

{% block body %}
    {{ parent() }} 
    <h1 class="display-4 text-center mb-5">Reservation Visite</h1>

    <div class="row justify-content-center">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>DateReservationVisite</th>
                <th>NbrparticipantVisite</th>
                <th>idVisite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_visite in reservation_visites %}
            <tr>
                <td>{{ reservation_visite.id }}</td>
                <td>{{ reservation_visite.dateReservationVisite ? reservation_visite.dateReservationVisite|date('Y-m-d') : '' }}</td>
                <td>{{ reservation_visite.nbrparticipantVisite }}</td>
                <td>{{ reservation_visite.idVisite }}</td>
                <td>
                    <a href="{{ path('app_reservation_visite_show', {'id': reservation_visite.id}) }}" class="btn btn-info btn-sm">show</a>
                    <a href="{{ path('app_reservation_visite_edit', {'id': reservation_visite.id}) }}" class="btn btn-primary btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="text-center mt-5 create-btn">
    <a href="{{ path('app_reservation_visite_new') }}" class="btn btn-success btn-lg">Create new Reservation</a>
    </div>
    </div>
{% endblock %}
