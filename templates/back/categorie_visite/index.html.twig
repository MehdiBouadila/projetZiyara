{% extends 'back.html.twig' %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .container { margin-bottom: 64px;  }
        .table {
            display:justify;
            border-radius: 10px;
            overflow: hidden;
            background-color: #fff
            color: #000;
            width:80%;
        }
        /* Keyframe animation for table rows */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        /* Apply animation to table rows */
        tbody tr {
            animation: fadeIn 0.5s ease-in-out;
        }
        /* Keyframe animation for button */
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
        /* Apply animation to button */
        .create-btn {
            animation: slideIn 0.5s ease-in-out;
        }
        /* Style titles */
        .title {
            font-size: 2rem;
            color: #3D7593;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}


{% block title %}
    CategorieVisite index
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
    <h1 class="display-4 text-center mb-5">CategorieVisite index</h1>
    <div class="row justify-content-center">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr scope="col">
                <th scope="col">Id</th>
                <th scope="col">NomCategorie</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie_visite in categorie_visites %}
                <tr>
                    <td>{{ categorie_visite.id }}</td>
                    <td>{{ categorie_visite.nomCategorie }}</td>
                    <td>
                        <a href="{{ path('app_categorie_visite_show', {'id': categorie_visite.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_categorie_visite_edit', {'id': categorie_visite.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    <div class="text-center mt-5 create-btn">
        <a href="{{ path('app_categorie_visite_new') }}" class="btn btn-success btn-lg">Create New Categorie</a>
    </div>
{% endblock %}
