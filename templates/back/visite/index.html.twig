{% extends 'back.html.twig' %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
    .container{margin-bottom:64px;}
     .table {
            border-radius: 10px;
            overflow: hidden;
        }
        /* Keyframe animation for table rows */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Apply animation to table rows */
        tbody tr {
            animation: fadeIn 0.5s ease-in-out;
        }

        /* Keyframe animation for button */
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Apply animation to button */
        .create-btn {
            animation: slideIn 0.5s ease-in-out;
        }
    </style>
{% endblock %}

{% block title %}
    Visite index - Explore Our Tours
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1 class="display-4 text-center mb-5">Welcome to Our Tours</h1>

        <div class="row justify-content-center">
            <div class="col-md-10">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Date</th>
                            <th scope="col">Price</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for visite in visites %}
                            <tr>
                                <td>{{ visite.id }}</td>
                                <td>{{ visite.titre }}</td>
                                

                                <td>{{ visite.descriptionVisite }}</td>
                                <td>{{ visite.dateVisite ? visite.dateVisite|date('Y-m-d') : '' }}</td>
                                <td>${{ visite.prix }}</td>
<td>
                 {% if visite.imagev %}
                        <img src="{{ asset('uploads/' ~ visite.imagev) }}" alt="imagev">
                    {% else %}
                        No image available
                    {% endif %}
                </td>


                                <td>
                                    <a href="{{ path('app_visite_show', {'id': visite.id}) }}" class="btn btn-info btn-sm">Show</a>
                                    <a href="{{ path('app_visite_edit', {'id': visite.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="text-center mt-5 create-btn"> <!-- Added margin top and animation class -->
            <a href="{{ path('app_visite_new') }}" class="btn btn-success btn-lg">Create New Tour</a>
        </div>
    </div>
{% endblock %}
