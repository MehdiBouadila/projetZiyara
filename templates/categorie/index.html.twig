{% extends 'back.html.twig' %}

{% block css %}
{{ parent() }}
{% endblock %}

{% block title %}Categorie index{% endblock %}
{% block navbar %}
{{ parent() }}
{% endblock %}
{% block body %}
{{ parent() }}
    <h1>Categorie index</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Type</th>
                <th>Produit</th>
                <th>Supprimer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.type }}</td>
                <td> <a class="btn btn-inverse-dark btn-fw" href="{{ path('app_produit_new', {'id': categorie.id}) }}">Ajouter<i class="mdi mdi-eye"></i> </a></td>
                <td>{{ include('categorie/_delete_form.html.twig') }}</td>
                <td>
                    <a class="btn btn-inverse-warning btn-fw" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show<i class="mdi mdi-eye"></i> </a>
                    <a class="btn btn-inverse-info btn-fw"  href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit<i class="mdi mdi-border-color"></i> </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a class="btn btn-inverse-success btn-fw" href="{{ path('app_categorie_new') }}">Create new<i class="mdi mdi-plus-circle"></i></a>
{% endblock %}
