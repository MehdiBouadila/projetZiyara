{% extends 'destination.html.twig' %}

{% block title %}
    {{ transport.typeTransport }} Details
{% endblock %}

{% block body %}
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/front/images/bg_1.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center" data-scrollax-parent="true">
                <div class="col-md-9 ftco-animate pb-5 text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="index.html"> <i class="fa fa-chevron-right"></i></a></span> <span> <i class="fa fa-chevron-right"></i></span></p>
                    <h1 class="mb-0 bread"><strong>{{ transport.typeTransport }} Details</strong></h1>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="transport-details">
                    <h2 class="mb-4" style="font-size: 24px;">{{ transport.typeTransport }} Details</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li style="font-size: 18px;"><strong>Type:</strong> {{ transport.typeTransport }}</li>
                                <li style="font-size: 18px;"><strong>Date:</strong> {{ transport.dateTransport ? transport.dateTransport|date('Y-m-d') : '' }}</li>
                                <li style="font-size: 18px;"><strong>Prix:</strong> {{ transport.prixTransport }}</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            {% if transport.imageTransport %}
                                <img src="{{ asset('uploads/' ~ transport.imageTransport) }}" alt="Transport Image" class="img-fluid">
                            {% else %}
                                <p style="font-size: 18px;">No image available</p>
                            {% endif %}
                            {% if transport.description %}
                                <p class="mt-4" style="font-size: 18px;"><strong>Description:</strong> {{ transport.description }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
