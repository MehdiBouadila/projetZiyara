{% extends 'destination.html.twig' %}

{% block title %}
    Reservation
{% endblock %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block navbar %}
    {{ parent() }}
{% endblock %}

{% block body %}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/front/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 ftco-animate pb-5 text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html"> <i class="fa fa-chevron-right"></i></a></span> <span> <i class="fa fa-chevron-right"></i></span></p>
                <h1 class="mb-0 bread">Confirmation Reservation</h1>
            </div>
        </div>
    </div>
</section>


<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.idUser) }}
                {{ form_widget(form.idUser, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% if form_errors(form.idUser) %}
                <div class="alert alert-danger">{{ form_errors(form.idUser) }}</div>
            {% endif %}

            <div class="form-group">
                {{ form_label(form.dateReservationTransport) }}
                {{ form_widget(form.dateReservationTransport, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% if form_errors(form.dateReservationTransport) %}
                <div class="alert alert-danger">{{ form_errors(form.dateReservationTransport) }}</div>
            {% endif %}

            <div class="form-group">
                {{ form_label(form.pointDepart) }}
                {{ form_widget(form.pointDepart, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% if form_errors(form.pointDepart) %}
                <div class="alert alert-danger">{{ form_errors(form.pointDepart) }}</div>
            {% endif %}

            <div class="form-group">
                {{ form_label(form.pointArrive) }}
                {{ form_widget(form.pointArrive, {'attr': {'class': 'form-control'}}) }}
            </div>
            {% if form_errors(form.pointArrive) %}
                <div class="alert alert-danger">{{ form_errors(form.pointArrive) }}</div>
            {% endif %}

            <div class="form-group" style="display: none;">
                {{ form_widget(form.idTransport) }}
            </div>

            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>

            {{ form_end(form) }}

        </div>
    </div>
</div>
<div style="margin-top: 100px;"></div>
<div style="margin-bottom: 100px;"></div>
{% endblock %}
