{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block css %}
 {{ parent() }} 
{% endblock %}



{% block body %}
    <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh;">
        <h1>Informations sur mon compte</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id :</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email :</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Mot de passe :</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>IsVerified :</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_user_edit_front', {'id': user.id}) }}" class="btn btn-secondary">Modifier mon compte</a>
        </div>

        {{ include('back/user/_delete_form.html.twig') }}
    </div>
{% endblock %}

