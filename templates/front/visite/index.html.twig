{% extends 'destination.html.twig' %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
    .container{margin-bottom:64px;}
     .table {
            border-radius: 10px;
            overflow: hidden;
        }
        /* Keyframe animation for table rows */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Apply animation to table rows */
        tbody tr {
            animation: fadeIn 0.5s ease-in-out;
        }

        /* Keyframe animation for button */
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Apply animation to button */
        .create-btn {
            animation: slideIn 0.5s ease-in-out;
        }
    </style>
{% endblock %}

{% block title %}
    Visite index - Explore Our Tours
{% endblock %}

{% block body %}
    {{ parent() }}
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                {% for visite in visites %}
                    <div class="col-md-4 ftco-animate">
                        <div class="project-wrap">
                            <a href="#" class="img" style="background-image: url('{{ asset('uploads/' ~ visite.imagev) }}');">
                                <span class="price">${{ visite.prix }}/person</span>
                            </a>
                            <div class="text p-4">
                                
                                <h3><a href="#">{{ visite.titre }}</a></h3>
                                <h5>{{ visite.descriptionVisite}}</h5>
                                <h6><a href="#">{{ visite.dateVisite ? visite.dateVisite|date('Y-m-d') : 'No Date Available' }}</a></h6>
                             <a href="{{ path('app_reservation_visite_new_front', {'id': visite.id}) }}" class="btn btn-primary">RÃ©server</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
