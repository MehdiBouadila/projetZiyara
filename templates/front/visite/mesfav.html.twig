{% extends 'destination.html.twig' %}

{% block js %}
    {{ parent() }}
    <script>
        function removeFavorite(button) {
            
            const visitId = button.getAttribute('data-visite-id');

            
            fetch('{{ path('remove_favorite') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    visitId: visitId
                })
            })
            .then(response => {
                if (response.ok) {
                    
                    console.log('Favorite added successfully!');
                } else {
                    
                    console.error('Failed to add favorite');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>
{% endblock %}


{% block css %}
    {{ parent() }}
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-N8XlgV4HwGHc5YKuFi9jsfE4x/THQzU6KsIY3rfdjNFxJ+E4/zZ3InB6uiZfNrJNlIB1DGlJ/pnJU6orVeCgZQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
   
    <style>
    .container{margin-bottom:64px;}
     .table {
            border-radius: 10px;
            overflow: hidden;
        }
        /* Keyframe animation for table rows */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Apply animation to table rows */
        tbody tr {
            animation: fadeIn 0.5s ease-in-out;
        }

        /* Keyframe animation for button */
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Apply animation to button */
        .create-btn {
            animation: slideIn 0.5s ease-in-out;
        }
    </style>
{% endblock %}

{% block title %}
    Visite index - Explore Our Tours
{% endblock %}

{% block body %}
    {{ parent() }}
    
    <section class="ftco-section">
        <div class="container">
            <div class="row mb-4">
                <div class="col text-center">
                    <a href="{{ path('mesres') }}" class="btn btn-primary">Go to My Reservations</a>
                    <a href="{{ path('mesfav') }}" class="btn btn-primary ml-2">My Favorite Visits</a> <!-- Added button for favorite visits -->
                </div>
            </div>
            <div class="row">
                {% for visite in visites %}
                    <div class="col-md-4 ftco-animate">
                        <div class="project-wrap">
                            <a href="#" class="img" style="background-image: url('{{ asset('uploads/' ~ visite.imagev) }}');">
                                <span class="price">${{ visite.prix }}/person</span>
                            </a>
                            <div class="text p-4">
                                <h3><a href="#">{{ visite.titre }}</a></h3>
                                <h5>{{ visite.descriptionVisite }}</h5>
                                <h6><a href="#">{{ visite.dateVisite ? visite.dateVisite|date('Y-m-d') : 'No Date Available' }}</a></h6>
                                <form action="{{ path('remove_favorite') }}" method="post">
                                    <input type="hidden" name="visitId" value="{{ visite.id }}">
                                    
                                    <button type="submit" class="btn btn-outline-primary"  ><i class="fas fa-heart"></i>
                                    
                                    </button>
                                </form>
                                <a href="{{ path('app_show_visite_new_front', {'id': visite.id}) }}" class="btn btn-primary">Voir Details</a>
                            </div>

                        </div>

                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

