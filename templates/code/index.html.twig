{% extends 'back.html.twig' %}
{% block css %}
{{ parent() }}
{%endblock%}

{% block title %}code promo{% endblock %}
{% block navbar %}
{{ parent() }}
{%endblock%}

{% block body %}
{{ parent() }}
    <h1>Code index</h1>

   <div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Reduction</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code in codes %}
            <tr>
                <td>{{ code.id }}</td>
                <td>{{ code.code }}</td>
                <td>{{ code.reduction }}</td>
                <td>{{ code.dateDebut }}</td>
                <td>{{ code.dateFin }}</td>
                <td>
                    <a class="btn btn-inverse-warning btn-fw" href="{{ path('app_code_show', {'id': code.id}) }}">show<i class="mdi mdi-eye"></i> </a>
                    <a class="btn btn-inverse-info btn-fw" href="{{ path('app_code_edit', {'id': code.id}) }}">edit <i class="mdi mdi-border-color"></i> </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a class="btn btn-inverse-success btn-fw" href="{{ path('app_code_new') }}">Create new <i class="mdi mdi-plus-circle"></i></a>
{% endblock %}
