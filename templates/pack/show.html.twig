{% extends 'back.html.twig' %}

{% block title %}Pack
{% endblock %}

{% block body %}

	<div class="container">
		<div class="card">
			<img src="{{ asset('img/' ~ pack.imagePack) }}" class="card-img-top" alt="{{ pack.titrePack }}">
			<div class="card-body">
				<h5 class="card-title">{{ pack.titrePack }}</h5>
				<p class="card-text">{{ pack.descriptionPack }}</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<strong>Id:</strong>
					{{ pack.id }}</li>
				<li class="list-group-item">
					<strong>Prix:</strong>
					{{ pack.prixPack }}</li>
				<li class="list-group-item">
					<strong>Date de départ:</strong>
					{{ pack.dateDepartPack ? pack.dateDepartPack|date('Y-m-d') : '' }}</li>
				<li class="list-group-item">
					<strong>Date d'arrivée:</strong>
					{{ pack.dateArrivePack ? pack.dateArrivePack|date('Y-m-d') : '' }}</li>
				<li class="list-group-item">
					<strong>Reservations:</strong>
					<ul>
						{% for reservation in pack.reservations %}
							<li>
								Date:
								{{ reservation.dateReservationPack ? reservation.dateReservationPack|date('Y-m-d') : '' }},
																                            Number of Participants:
								{{ reservation.nbrParticipantPack }},
																                            User:
								{{ reservation.user.email }}
							</li>
						{% endfor %}
					</ul>
				</li>
				<li class="list-group-item">
					<strong>Transport:</strong>
					{{ pack.transports ? pack.transports.prixTransport : 'N/A' }}</li>
				<li class="list-group-item">
					<strong>Guide:</strong>
					{{ pack.guide ? pack.guide.nomGuide : 'N/A' }}</li>
			</ul>
			<div class="card-body">
				<a href="{{ path('app_pack_index') }}" class="btn btn-secondary">Back to List</a>
				<a href="{{ path('app_pack_edit', {'id': pack.id}) }}" class="btn btn-primary">Edit</a>

				{{ include('pack/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
